@model bootstrapmvc.Models.Student
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";

    int toplam = 5;
    int dolu = 0;

    if (!string.IsNullOrEmpty(Model.Surname)) { dolu++; }
    if (!string.IsNullOrEmpty(Model.Department)) { dolu++; }
    if (!string.IsNullOrEmpty(Model.Class)) { dolu++; }
    if (!string.IsNullOrEmpty(Model.PhoneNumber)) { dolu++; }
    if (!string.IsNullOrEmpty(Model.Address)) { dolu++; }

    int doluluk = (int)((dolu / (double)toplam) * 100);

}

<div class="container mt-3">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">
                <i class="fa-solid fa-user-graduate me-2"></i> Öğrenci Bilgileri
            </h4>
            <div>
                <a href="@Url.Action("Index", "Student")" class="btn btn-secondary me-2">
                    <i class="fa-solid fa-list"></i> Öğrenci Listesine Dön
                </a>
                <a href="@Url.Action("StudentHistory", "Borrow", new { id = Model.ID })" class="btn btn-info">
                    <i class="fa-solid fa-book-open-reader me-2"></i> Ödünç Kitap Geçmişi
                </a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <tr>
                    <th><i class="fa-solid fa-id-badge me-2"></i> ID</th>
                    <td>@Model.ID</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-user me-2"></i> İsim</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-user me-2"></i> Soyisim</th>
                    <td>@Model.Surname</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-hashtag me-2"></i> Öğrenci Numarası</th>
                    <td>@Model.StudentNumber</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-building-columns me-2"></i> Bölüm</th>
                    <td>@Model.Department</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-layer-group me-2"></i> Sınıf</th>
                    <td>@Model.Class</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-phone me-2"></i> Telefon Numarası</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-location-dot me-2"></i> Adres</th>
                    <td>@Model.Address</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-calendar-days me-2"></i> Kayıt Tarihi</th>
                    <td>@Model.RegistrationDate.ToString("dd.MM.yyyy")</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-envelope me-2"></i> E-Posta</th>
                    <td>@Model.Mail</td>
                </tr>
                <tr>
                    <th><i class="fa-solid fa-check me-2"></i> Aktif Mi?</th>
                    <td>@(Model.IsActive ? "Evet" : "Hayır")</td>
                </tr>
            </table>
        </div>
        <div class="card-footer">
            <h4>Profil Doluluk Oranı</h4>
            <div class="progress">
                <div class="progress-bar bg-success" style="width: @doluluk%;">@doluluk%</div>
            </div>
        </div>
        <div class="container mt-3">
            <div id="akordiyon">
                <div class="card">
                    <div class="card-header">
                        <a href="#collapse1" class="btn text-black fw-bold" data-bs-toggle="collapse">
                            <i class="fas fa-triangle-exclamation me-2"></i>Hatırlatma!
                        </a>
                    </div>
                    <div class="collapse" data-bs-parent="#akordiyon" id="collapse1">
                        <div class="card-body">
                            <div class="alert alert-danger" role="alert">
                                Doluluk oranı %100 olmayan öğrencilerin bilgilerini öğrenci ile görüşerek sonrasında mutlaka doldurunuz.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br/>
    </div>
</div>
