@model bootstrapmvc.Areas.ManagerPanel.Data.ManagerLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ManagerLogin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="~/Scripts/fontawesome-free-6.7.2-web/fontawesome-free-6.7.2-web/css/all.min.css" rel="stylesheet" />
    <link href="~/Areas/ManagerPanel/CSS/sign-in.css" rel="stylesheet" />
    <style>
        .alert-danger ul {
            list-style-type: none;
            padding-left: 0;
            margin-bottom: 0;
        }
    </style>
</head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h1 class="h3 mb-3 fw-normal text-center">Admin Giriş Paneli</h1>

            if (!string.IsNullOrEmpty(ViewBag.mesaj))
            {
                <div class="alert alert-danger" role="alert">@ViewBag.mesaj</div>
            }

            if (ViewData.ModelState != null && !ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
            }

            <div class="form-floating">
                <input type="email"
                       class="form-control"
                       id="floatingInput"
                       placeholder="name@example.com"
                       name="Mail"
                       value="@Model.Mail" />
                <label for="floatingInput"><i class="fa-solid fa-envelope"></i> Mail Adresiniz</label>
            </div>

            <div class="form-floating">
                <input type="password"
                       class="form-control"
                       id="floatingPassword"
                       placeholder="Password"
                       name="Password" />
                <label for="floatingPassword"><i class="fa-solid fa-lock"></i> Şifreniz</label>
            </div>

            <div class="form-check text-start my-3">
                <input type="hidden" name="RememberMe" value="false" />
                <input class="form-check-input"
                       type="checkbox"
                       id="checkDefault"
                       name="RememberMe"
                       value="true"
                       @(Model.RememberMe ? "checked" : "") />
                <label class="form-check-label" for="checkDefault">Beni hatırla</label>
            </div>

            <button class="btn btn-dark w-100 py-2" type="submit">
                <i class="fa fa-sign-in-alt"></i> Giriş Yap
            </button>

            <p class="mt-5 mb-3 text-body-secondary text-center">© 2017–2025</p>
        }

    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
