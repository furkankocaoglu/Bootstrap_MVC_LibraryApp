
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="~/Scripts/fontawesome-free-6.7.2-web/fontawesome-free-6.7.2-web/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-sm bg-dark fixed-top">
        <div class="container">
            <a href="#" class="navbar-brand">
                <i class="fa-solid fa-book me-2"></i> Kütüphane Yönetim Paneli
            </a>
        </div>
    </nav>
    <main class="mt-5 pt-5"> 
        <div class="container">
            <div id="gecistirici" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#gecistirici" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#gecistirici" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#gecistirici" data-bs-slide-to="2"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://images.unsplash.com/photo-1512820790803-83ca734da794?auto=format&fit=crop&w=1200&q=80" class="d-block w-100" alt="Kitap rafları" style="max-height:500px; object-fit:cover;">
                    </div>
                    <div class="carousel-item">
                        <img src="https://images.unsplash.com/photo-1524995997946-a1c2e315a42f?auto=format&fit=crop&w=1200&q=80" class="d-block w-100" alt="Öğrenciler çalışma alanında" style="max-height:500px; object-fit:cover;">
                    </div>
                    <div class="carousel-item">
                        <img src="https://images.unsplash.com/photo-1507842217343-583bb7270b66?auto=format&fit=crop&w=1200&q=80" class="d-block w-100" alt="Açık kitap ve notlar" style="max-height:500px; object-fit:cover;">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#gecistirici" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#gecistirici" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>      
        <div class="container my-5 text-center">
            <h3 class="mb-4">Başlamak İçin Seçiminizi Yapın</h3>
        </div>      
        <div class="container marketing my-5">
            <div class="row text-center">
                <div class="col-lg-4">
                    <h2 class="fw-normal">Kitaplar</h2>
                    <img src="https://cdn-icons-png.flaticon.com/512/29/29302.png" alt="Kitap İkonu" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <p>Kitap listesine ve detaylarına ulaşabilirsiniz.</p>
                    <p>
                        <a class="btn btn-secondary" href="@Url.Action("Index", "Book")">Kitapları Gör »</a>
                    </p>
                </div>
                <div class="col-lg-4">
                    <h2 class="fw-normal">Öğrenciler</h2>
                    <img src="https://cdn-icons-png.flaticon.com/512/1995/1995520.png" alt="Öğrenci İkonu" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <p>Öğrenci listesini ve profillerini inceleyin.</p>
                    <p>
                        <a class="btn btn-secondary" href="@Url.Action("Index", "Student")">Öğrencileri Gör »</a>
                    </p>
                </div>
                <div class="col-lg-4">
                    <h2 class="fw-normal">Ödünç İşlemleri</h2>
                    <img src="https://cdn-icons-png.flaticon.com/512/992/992700.png" alt="Değiş Tokuş İkonu" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <p>Ödünç alma ve teslim işlemlerini kontrol edin.</p>
                    <p>
                        <a class="btn btn-secondary" href="@Url.Action("Index", "Borrow")">Ödünç Kayıtları »</a>
                    </p>
                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
